<h1>Add New Ingredient</h1>

<%= form_for(@ingredient) do |f| %>
  
  <%= f.label :name %><br/>
  <%= f.text_field :name %>
  
  <%= f.label :calories %><br/>
  <%= f.text_field :calories %>
  
  <%= f.label :protein %><br/>
  <%= f.text_field :protein %>
  
  <%= f.label :carbs %><br/>
  <%= f.text_field :carbs %>
  
  <%= f.label :price %><br/>
  <%= f.text_field :price %>
  
  <%= f.label :serving_size_oz %><br/>
  <%= f.text_field :serving_size %>
  
  <%= f.label :servings %><br/>
  <%= f.number_field :servings %>
  
<%= f.submit "Save" %>
<% end %>


